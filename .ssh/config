Host *
    IgnoreUnknown UseKeychain
    UseKeychain yes
    AddKeysToAgent yes
    ForwardAgent yes
    ForwardX11 yes
    IdentityFile ~/.ssh/personal

Host personal-github
    HostName github.com
    User git
    IdentityFile ~/.ssh/personal

Host personal-gist
    HostName github.com
    User git
    IdentityFile ~/.ssh/personal

Host work-github
    HostName github.com
    User git
    IdentityFile ~/.ssh/work

Host work-gist
    HostName github.com
    User git
    IdentityFile ~/.ssh/work

Include HostConfigs